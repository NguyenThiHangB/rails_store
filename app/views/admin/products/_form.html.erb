<%= simple_form_for [:admin, @product], html: {multipart: true} do |f| %>
  <div class="col-md-10 col-md-offset-1">
    <%= form_group_for f, :name, label: false  do %>
      <div class="form-group">
        <%= f.label :name, class: "control-label" do %>
          <%= t ".name" %>
          <span class="red">*</span>
        <% end %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
    <% end %>
    <%= form_group_for f, :group_product, label: false  do %>
      <div class="form-group">
        <%= f.association :group_product,
          input_html: {class: "chosen-select form-control"} %>
      </div>
    <% end %>
    <%= form_group_for f, :image, label: false  do %>
      <div class="form-group">
        <%= f.label :image, class: "control-label" do %>
          <%= t ".image" %>
          <span class="red">*</span>
        <% end %>
        <%= f.file_field :image, class: "form-control" %>
      </div>
    <% end %>
    <div class="form-group">
      <%= image_tag @product.image_url.to_s, class: "image_form" %>
    </div>
    <%= form_group_for f, :summary, label: false  do %>
      <div class="form-group">
        <%= f.label :summary, class: "control-label" do %>
          <%= t ".summary" %>
          <span class="red">*</span>
        <% end %>
        <%= f.cktext_area :summary, class: "form-control",
          rows: Settings.rows %>
      </div>
    <% end %>
    <%= form_group_for f, :price, label: false  do %>
      <div class="form-group">
        <%= f.label :price, class: "control-label" do %>
          <%= t ".price" %>
          <span class="red">*</span>
        <% end %>
        <%= f.text_field :price, class: "form-control" %>
      </div>
    <% end %>
    <%= form_group_for f, :price_discount, label: false  do %>
      <div class="form-group">
        <%= f.label :price_discount, class: "control-label" do %>
          <%= t ".price_discount" %>
          <span class="red">*</span>
        <% end %>
        <%= f.text_field :price_discount, class: "form-control" %>
      </div>
    <% end %>
    <%= form_group_for f, :status, label: false  do %>
      <div class="form-group">
        <%= f.label :status, class: "control-label" do %>
          <%= t ".status" %>
          <span class="red">*</span>
        <% end %>
        <br />
        <%= f.radio_button :status, "On" %> <%= t ".o" %>&nbsp;&nbsp;&nbsp;
        <%= f.radio_button :status, "Off" %> <%= t ".of" %>
      </div>
    <% end %>
    <div class="form-group">
      <%= link_to t("admin.buttons.cancel"), admin_products_path,
        class: "btn btn-primary" %>
      <%= submit_tag t("admin.buttons.reset"), type: :reset, name: :reset,
        class: "btn btn-info" %>
      <%= submit_tag t("admin.buttons.save"), type: :submit, name: :save,
        class: "btn btn-success" %>
    </div>
  </div>
<% end %>
