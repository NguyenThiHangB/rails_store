<%= link_to t("admin.buttons.delete"), "#", {"data-toggle": "modal",
  "data-target": "#modal-delete", class: "btn btn-danger"} %>
<div class="modal" id="modal-delete" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">Ã—</span>
        </button>
        <h4 class="modal-title" id="modal-label">
          <%= t ".confirm" %>
        </h4>
      </div>
        <div class="modal-body">
          <%= t ".message" %>
        </div>
        <div class="modal-footer">
          <%= form_tag "#{namepath}", method: "delete" do %>
            <div class="col-md-6 text-right">
              <%= submit_tag t("admin.buttons.cancel"), name: nil,
                class: "btn btn-default", "data-dismiss": "modal" %>
            </div>
            <div class="col-md-6 text-left">
              <%= submit_tag t("admin.buttons.delete"), name: nil,
                type: :submit, class: "btn btn-info" %>
            </div>
          <% end %>
        </div>
    </div>
  </div>
</div>
